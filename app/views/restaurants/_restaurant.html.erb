<div class = "row clearfix">
    <% if restaurant.ate? %>

        <div class="restaurant">
            <p><%= restaurant.name %> <br> <%= restaurant.description %> <br> <%= restaurant.address %></p>
        </div>

        <div class="trash">
            <%= link_to "Delete", city_list_restaurant_path(@city_list, restaurant.id), method: :delete, data: { confirm: "Are you sure?" }%>
        </div>
    <% else %>
        <div class="eat">
            <%= link_to "Mark that you have eaten here and liked it", eat_and_liked_city_list_restaurant_path(@city_list, restaurant.id), method: :patch %>
        </div>

        <div class="eat">
            <%= link_to "Mark that you have eaten here and didn't like it", eat_and_didnt_like_city_list_restaurant_path(@city_list, restaurant.id), method: :patch %>
        </div>

        <div class="restaurant">
            <p><%= restaurant.name %></p><%= restaurant.description %> </p><%= restaurant.address %></p>
        </div>
        <div class="trash">
            <%= link_to "Delete", city_list_restaurant_path(@city_list, restaurant.id), method: :delete, data: { confirm: "Are you sure?" }%>
        </div>
    <% end %>
</div>
